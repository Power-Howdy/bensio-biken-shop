{% extends 'default_frame.twig' %}

{% set mypageno = 'card' %}

{% set body_class = 'mypage' %}

{% block main %}
    <h1 class="page-heading">マイページ/カード編集</h1>
    <div id="favorite_wrap" class="container-fluid">

        {% include 'Mypage/navi.twig' %}

        <div id="edit_credit_card_list_box" class="row">
            <div id="edit_credit_card_list_box__body" class="col-md-12">
                <h5 class="card-header">お客様のクレジットカード</h5>
                <div class="row is-padding">
                    {% if isRegisteredCreditCard %}
                        <div class="col-4">
                            <p>カードブランド</p>
                            <p>クレジットカード番号</p>
                            <p>有効期限</p>
                        </div>
                        <div class="col-6">
                            <p>{{ cardBrand }}</p>
                            <p>**** - **** - **** - {{ cardNumberMask }}</p>
                            <p>{{ cardExpire }}</p>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <p class="intro" style="padding-left: 15px;">クレジットカードは登録されていません。</p>
                        </div>
                    {% endif %}
                </div>
                <div class="ec-addressRole__actions">
                    {% if isRegisteredCreditCard %}
                        <a class="ec-inlineBtn btn btn-default btn-sm" href="{{ path('paylite_mypage_credit_card_edit') }}">
                            クレジットカードを変更
                        </a>
                    {% else %}
                        <a class="ec-inlineBtn btn btn-default btn-sm" href="{{ path('paylite_mypage_credit_card_new') }}">
                            クレジットカードを登録
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
