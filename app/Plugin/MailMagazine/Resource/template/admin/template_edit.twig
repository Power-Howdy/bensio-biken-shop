{% extends 'default_frame.twig' %}

{% set menus = ['mailmagazine', 'mailmagazine_template'] %}

{% block title %}メルマガ管理{% endblock %}
{% block sub_title %}テンプレート設定{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block main %}
    <form role="form" name="content_page_form" id="content_page_form" method="post"
          action="{{ url('plugin_mail_magazine_template_commit', { id: Template.id } ) }}">
        {{ form_widget(form._token) }}
        <div class="row" id="aside_wrap">
            <div class="col-md-9">
                <div class="box form-horizontal">
                    <div class="box-header">
                        <h3 class="box-title">テンプレート編集</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <div class="form-group">
                            {{ form_label(form.subject) }}
                            <div class="col-sm-9 col-lg-10">
                                {{ form_widget(form.subject) }}
                                {{ form_errors(form.subject) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.body) }}
                            <div class="col-sm-9 col-lg-10">
                                {{ form_widget(form.body, { 'attr' : { 'rows' : 20 } }) }}
                                {{ form_errors(form.body) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.htmlBody) }}
                            <div class="col-sm-9 col-lg-10">
                                {{ form_widget(form.htmlBody, { 'attr' : { 'rows' : 20 } }) }}
                                {{ form_errors(form.htmlBody) }}
                            </div>
                        </div>
                        <span class="help-block">※ 名前差し込み時は {name} といれてください</span>
                    </div>
                </div>
            </div>
            <!-- /.col -->
            <div class="col-md-3">
                <div class="col_inner" id="aside_column">
                    <div class="box no-header">
                        <div class="box-body">
                            <div class="row text-center">
                                <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                                    <button class="btn btn-primary btn-block btn-lg"
                                            onclick="document.content_page_form.submit();">登録
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>
            <!-- /.col -->
        </div>
    </form>
{% endblock %}
